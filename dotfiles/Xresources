
! basic config

URxvt.font:xft:bitstream vera sans mono:size=9:antialias=true 
URxvt.scrollBar: false
URxvt*internalBorder: 50

! transparency
URxvt*depth: 32
URxvt*background: rgba:0000/0000/0200/6600

! extensions
URxvt.perl-ext-common: default,matcher,resize-font

! clickable url
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1

URxvt.keysym.Control-n: perl:matcher:last
URxvt.keysym.Control-m: perl:matcher:list
URxvt.matcher.rend.0: Uline Bold fg14

! change font size
URxvt.iso14755: false
URxvt.iso14755_52: false

URxvt.keysym.Shift-Down:  resize-font:smaller
URxvt.keysym.Shift-Up:    resize-font:bigger

! copy paste with c-s-c/v
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard



! rofi
rofi.modi: run,window
rofi.separator-style: solid
rofi.show-icons: true
rofi.drun-icon-theme: Paper
rofi.sidebar-mode:    true
rofi.padding:         7
rofi.bw:              0
rofi.scrollbar-width: 0
rofi.line-margin:     0
rofi.lines: 10
rofi.terminal: urxvt
rofi.case-sensitive: false



